<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherDemo" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorBlue</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="windowSplashScreenBackground">@color/colorBlue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/weather_app_icon</item>
        <item name="postSplashScreenTheme">@android:style/Theme.Material.NoActionBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorBlue</item>
    </style>

</resources>